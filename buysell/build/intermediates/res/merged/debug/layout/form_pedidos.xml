<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Finalizando pedido"
        android:id="@+id/textView7"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffee02"
        android:textStyle="bold"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Dados de entrega"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:textIsSelectable="true" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <Spinner
                android:id="@+id/Pagamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/textbox_profile" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/edtTroco"
                android:hint="Troco"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/textbox_profile" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cep"
                android:id="@+id/edtCep"
                android:background="@drawable/textbox_profile" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="EnderÃ§o de entrega"
                android:id="@+id/edtEnd"
                android:background="@drawable/textbox_profile"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Estado"
                android:id="@+id/edtEstado"
                android:background="@drawable/textbox_profile" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cidade"
                android:id="@+id/edtCidade"
                android:background="@drawable/textbox_profile" />

            <Spinner
                android:id="@+id/edtHora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/textbox_profile" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/edtData"
                android:hint="Data de entrega"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/textbox_profile" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10dp"
                android:orientation="vertical"
                android:weightSum="1">


                <Button
                    android:id="@+id/btnEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:background="@drawable/button_ok"
                    android:textColor="@color/text_white_cloor"
                    android:textSize="@dimen/text_size_20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonCancelar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/button_cancel"
                    android:textColor="@color/text_white_cloor"
                    android:textStyle="bold"
                    android:layout_marginTop="-15dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
